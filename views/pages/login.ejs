<%- include("partials/head", { title: "Login" }) %>
  <body>
    <h1>Hello from login.ejs</h1>
    <%- include("partials/navbar", { user }) %>
    
    <form action="/login" method="POST">
      <div>
        <label for="emailControl" class="form-label">Email: </label>
        <input type="email" id="emailControl" class="form-control" name="email"/>
      </div>
      <div> 
        <label for="passwordControl" class="form-label">Password: </label>
        <input type="password" name="password" id="passwordControl" class="form-control" /> <br /><br />
      </div> 

      <button type="submit" class="btn">Login</button>
    </form>
    <%- include("partials/footer", { title: "Login" }) %>

  </body>
</html>
