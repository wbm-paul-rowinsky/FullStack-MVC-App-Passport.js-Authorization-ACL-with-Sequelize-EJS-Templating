<%- include("../partials/head", { title: "Edit subject" }) %>
  <body>
    <h2>Edit subject by id: <%= subjectToEdit.id %></h2>
    <%- include("../partials/navbar", { user }) %>
    <% let selectTeacherHtml = htmlHelper.getSelectIdCodeFromArr(teachers, "teacherId", "name", "teacherControl", "form-control", subjectToEdit.teacherId) %>
    <% let selectSchoolHtml = htmlHelper.getSelectIdCodeFromArr(schools, "schoolId", "name", "schoolControl", "form-control", subjectToEdit.schoolId) %>
    <form action="/subjects/edit/<%= subjectToEdit.id %>" method="POST">
        <input type="hidden" name="id" value="<%= subjectToEdit.id %>">
        <div>
            <label for="nameControl" class="form-label">Name: </label>
            <input type="text" id="nameControl" class="form-control" name="name" value="<%= subjectToEdit.name %>"/>
        </div>
        <div>
            <label for="descriptionControl" class="form-label">Description: </label>
            <input type="text" id="descriptionControl" class="form-control" name="description" value="<%= subjectToEdit.description %>"/>
        </div>
        <div>
          <label for="teacherControl" class="form-label">Teacher: </label>
          <%- selectTeacherHtml %>
        </div>
        <div>
          <label for="schoolControl" class="form-label">School: </label>
          <%- selectSchoolHtml %>
        </div>
        <button type="submit" class="btn">Save subject</button>
    </form>
    <%- include("../partials/footer", { title: "Edit subject" }) %>

  </body>
</html>
