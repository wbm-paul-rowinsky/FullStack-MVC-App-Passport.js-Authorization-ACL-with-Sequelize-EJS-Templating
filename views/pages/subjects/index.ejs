<%- include("../partials/head", { title: "Subject List" }) %>
<body>
    <h3>Subjects list</h3>
    <%- include("../partials/navbar", {user}) %>

    <p>
        <% if (subjects) {%>
            <table class="table">
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>school</th>
                    <th>teacher</th>
                    <th>actions</th>
                </tr>
                <% for (let i=0; i < subjects.length; i++) { %>
                    <tr>
                        <td><%= subjects[i].id %></td>
                        <td><%= subjects[i].name %></td>
                        <td><%= htmlHelper.getElValueFromArrById(schools, subjects[i].schoolId, "name") %></td>
                        <td><%= htmlHelper.getElValueFromArrById(teachers, subjects[i].teacherId, "name") %></td>
                        <td>
                            <a href="/subjects/edit/<%= subjects[i].id %>">edit</a>
                            <a href="/subjects/view/<%= subjects[i].id %>">view</a>
                        </td>
                    </tr>

                <% } %>
            </table>
        <% } %>
    </p>
    <a href="/subjects/add" class="btn">Add Subject</a>
    <%- include("../partials/footer", { title: "Admin Subject List" }) %>

</body>
</html>