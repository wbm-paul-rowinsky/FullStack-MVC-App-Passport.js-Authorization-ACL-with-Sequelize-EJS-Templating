<%- include("partials/head", { title: "Register" }) %>
  <body>
    <h1>Hello from register.ejs</h1>
    <%- include("partials/navbar", { user }) %>
    <% let selectSchoolHtml = htmlHelper.getSelectIdCodeFromArr(schools, "schoolId", "name", "schoolId", "form-control") %>
    <form action="/register" method="POST">
      <div>
        <label for="nameControl" class="form-label">Name: </label>
        <input type="text" id="nameControl" class="form-control" name="name"/>
      </div>
      <div>
        <label for="surnameControl" class="form-label">Surname: </label>
        <input type="text" id="surnameControl" class="form-control" name="surname"/>
      </div>
        <div>
          <label for="emailControl" class="form-label">Email: </label>
          <input type="email" id="emailControl" class="form-control" name="email" id="" />
        </div>
        <div> 
          <label for="passwordControl" class="form-label">Password: </label>
          <input type="password" name="password" id="passwordControl" class="form-control" /> <br /><br />
        </div> 
        <div>
          <label for="addressControl" class="form-label">Address: </label>
          <input type="text" id="addressControl" class="form-control" name="address"/>
        </div>
        <div>
          <label for="ageControl" class="form-label">Age: </label>
          <input type="number" id="ageControl" class="form-control" name="age"/>
        </div>
        <div>
          <label for="schoolId" class="form-label">School: </label>
          <%- selectSchoolHtml %>
        </div>
        <button type="submit" class="btn">Register</button>
    </form>
    <%- include("partials/footer", { title: "Register" }) %>

  </body>
</html>
