<%- include("../partials/head", {title: "Edit Grade"}) %> 
<body>
    <h3>Edit grade with id: <%= gradeToEdit.id %></h3>
    <%- include("../partials/navbar", {user}) %>
    <% const selectTeacherHtml = htmlHelper.getSelectIdCodeFromArr(teachers, "teacherId", "name", "teacherControl", "form-control", gradeToEdit.teacherId ) %>
    <% const selectSchoolHtml = htmlHelper.getSelectIdCodeFromArr(schools, "schoolId", "name", "schoolControl", "form-control", gradeToEdit.schoolId ) %>
    <% const selectSubjectHtml = htmlHelper.getSelectIdCodeFromArr(subjects, "subjectId", "name", "subjectControl", "form-control", gradeToEdit.subjectId ) %>
    <% const selectStudentHtml = htmlHelper.getSelectIdCodeFromArr(students, "studentId", "name", "studentControl", "form-control", gradeToEdit.studentId ) %>

    <form action="/grades/edit/<%= gradeToEdit.id %>" method="post">
        <input type="hidden" value="<%= gradeToEdit.id %>">
        <div>
            <label for="gradeControl" class="form-label">Grade: </label>
            <input type="number" min="1" max="6" step="0.5" name="grade" required class="form-control" id="gradeControl" value="<%= gradeToEdit.grade %>">
        </div>
        <div>
            <label for="descriptionControl" class="form-label">Description: </label>
            <input type="text" name="description" class="form-control" id="descriptionControl" value="<%= gradeToEdit.description %>">
        </div>
        <div>
            <label for="schoolControl" class="form-label">School: </label>
            <%- selectSchoolHtml %>
        </div>
        <div>
            <label for="subjectControl" class="form-label">Subject: </label>
            <%- selectSubjectHtml %>
        </div>
        <div>
            <label for="teacherControl" class="form-label">Teacher: </label>
            <%- selectTeacherHtml %>
        </div>
        <div>
            <label for="studentControl" class="form-label">Student: </label>
            <%- selectStudentHtml %>
        </div>
        <button class="btn" type="submit">Save grade</button>
    </form>

    <%- include("../partials/footer", {title: "Add Grade"}) %>
</body>
</html>